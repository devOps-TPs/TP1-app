pipeline {

    agent any



    stages {

        stage('install') {
            steps {
                cd './project-name'
                echo 'Installing...'
                sh 'npm install'
            }
        }

        stage('Build') {

            steps {

                echo 'Building..'

                sh 'npm run build'
            }

        }s

        stage('Test') {

            steps {

                echo 'Testing..'

                sh 'npm run test:e2e'

            }

        }

        stage('Deploy') {

            steps {

                echo 'Deploying....'

                sh 'npm run start:prod'

            }

        }

    }

}